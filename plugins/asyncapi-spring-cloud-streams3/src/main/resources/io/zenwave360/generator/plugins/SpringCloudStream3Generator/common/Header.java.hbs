package {{apiPackage}};

import java.util.HashMap;
import java.util.Map;

public class Header {

    private final String name;

    private final Object value;

    public Header(final String name, final Object value) {
        super();
        this.name = name;
        this.value = value;
    }

    public static Header of(final String name, final Object value) {
        return new Header(name, value);
    }

    public static Map<String, Object> asMap(final Header[] headers) {
        final Map<String, Object> map = new HashMap<String, Object>();
        if (headers != null) {
            for (final Header header : headers) {
                map.put(header.getName(), header.getValue());
            }
        }
        return map;
    }

    public String getName() {
        return this.name;
    }

    public Object getValue() {
        return this.value;
    }

    @Override
    public String toString() {
        return String.format("Header{ name: '%s', value:'%s' }", name, value);
    }
}
