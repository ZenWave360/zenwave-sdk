asyncapi: 3.0.0
info:
  title: Zenwave 360 Generated API
  version: 0.0.1

defaultContentType: application/json

tags:
  - name: "Default"
{{~#each zdlModel.serviceNames as |serviceName|}}
  - name: "{{asTagName serviceName}}"
{{~/each}}

channels:
{{~#each zdlModel.channels as |channel|}}
  {{@key}}:
    address: {{channel.address}}
    messages:
    {{~#each channel.messages as |message|}}
      {{@key}}:
        $ref: '#/components/messages/{{@key}}'
    {{~/each}}
{{~/each}}

operations:
{{~#each zdlModel.operations as |operation|}}
  {{@key}}:
    action: {{operation.action}}
    channel:
      $ref: '#/channels/{{operation.channel}}'
{{~/each}}


components:
  messages:
{{~#each zdlModel.commands as |command|}}
    {{command.name}}Message:
      messageId: {{command.name}}Message
      name: {{command.name}}Message
      title: {{command.javadoc}}
      summary: {{command.javadoc}}
      schemaFormat: {{{schemaFormatString}}}
      traits:
        - $ref: '#/components/messageTraits/CommonHeaders'
      payload:
        $ref: "{{payloadRef command}}"
{{~/each}}
{{~#each zdlModel.events as |event|}}
    {{event.name}}Message:
      messageId: {{event.name}}Message
      name: {{event.name}}Message
      title: {{event.javadoc}}
      summary: {{event.javadoc}}
      schemaFormat: {{{schemaFormatString}}}
      traits:
        - $ref: '#/components/messageTraits/CommonHeaders'
      payload:
        $ref: "{{payloadRef event}}"
{{~/each}}

  messageTraits:
    CommonHeaders:
      headers:
        type: object
        properties:
          kafka_messageKey:
            type: string
            description: This header value will be populated automatically at runtime
            x-runtime-expression: $message.payload#/id
          tracingId:
            type: string
            description: This header value will be populated automatically at runtime
            x-runtime-expression: $tracingIdSupplier

{{{schemasAsString}}}
